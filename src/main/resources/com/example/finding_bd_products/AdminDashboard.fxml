<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finding_bd_products.AdminDashboardController">
    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="20.0" alignment="CENTER_LEFT" style="-fx-background-color: linear-gradient(to right, #2E7D32, #4CAF50); -fx-padding: 15;">
            <Text text="Admin Dashboard" style="-fx-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #FF6B35; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">
            <!-- Tab Pane for different sections -->
            <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
                
                <!-- Users Tab -->
                <Tab text="Users">
                    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                        <VBox spacing="15.0" style="-fx-padding: 20;">
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Text text="User Registrations" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button text="Refresh" onAction="#refreshUsers" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
                            </HBox>
                            <TableView fx:id="usersTable" prefHeight="400">
                                <columns>
                                    <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="100"/>
                                    <TableColumn fx:id="userNameColumn" text="Full Name" prefWidth="150"/>
                                    <TableColumn fx:id="userEmailColumn" text="Email" prefWidth="180"/>
                                    <TableColumn fx:id="userPhoneColumn" text="Phone" prefWidth="120"/>
                                    <TableColumn fx:id="userCityColumn" text="City" prefWidth="100"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </ScrollPane>
                </Tab>

                <!-- Company Vendors Tab -->
                <Tab text="Company Vendors">
                    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                        <VBox spacing="15.0" style="-fx-padding: 20;">
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Text text="Company Vendor Registrations" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button text="Refresh" onAction="#refreshCompanyVendors" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
                            </HBox>
                            <TableView fx:id="companyVendorsTable" prefHeight="400">
                                <columns>
                                    <TableColumn fx:id="companyIdColumn" text="Vendor ID" prefWidth="100"/>
                                    <TableColumn fx:id="companyNameColumn" text="Company Name" prefWidth="150"/>
                                    <TableColumn fx:id="companyContactColumn" text="Contact Person" prefWidth="130"/>
                                    <TableColumn fx:id="companyEmailColumn" text="Email" prefWidth="180"/>
                                    <TableColumn fx:id="companyPhoneColumn" text="Phone" prefWidth="120"/>
                                    <TableColumn fx:id="companyStatusColumn" text="Status" prefWidth="100"/>
                                    <TableColumn fx:id="companyActionColumn" text="Actions" prefWidth="150"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </ScrollPane>
                </Tab>

                <!-- Retail Vendors Tab -->
                <Tab text="Retail Vendors">
                    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                        <VBox spacing="15.0" style="-fx-padding: 20;">
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Text text="Retail Vendor Registrations" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button text="Refresh" onAction="#refreshRetailVendors" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
                            </HBox>
                            <TableView fx:id="retailVendorsTable" prefHeight="400">
                                <columns>
                                    <TableColumn fx:id="retailIdColumn" text="Vendor ID" prefWidth="100"/>
                                    <TableColumn fx:id="retailShopColumn" text="Shop Name" prefWidth="150"/>
                                    <TableColumn fx:id="retailOwnerColumn" text="Owner Name" prefWidth="130"/>
                                    <TableColumn fx:id="retailEmailColumn" text="Email" prefWidth="180"/>
                                    <TableColumn fx:id="retailPhoneColumn" text="Phone" prefWidth="120"/>
                                    <TableColumn fx:id="retailStatusColumn" text="Status" prefWidth="100"/>
                                    <TableColumn fx:id="retailActionColumn" text="Actions" prefWidth="150"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </ScrollPane>
                </Tab>

                <!-- Product Approvals Tab -->
                <Tab text="Product Approvals">
                    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                        <VBox spacing="15.0" style="-fx-padding: 20;">
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Text text="Pending Product Approvals" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button text="Refresh" onAction="#refreshProducts" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
                            </HBox>
                            <TableView fx:id="productsTable" prefHeight="400">
                                <columns>
                                    <TableColumn fx:id="productIdColumn" text="Product ID" prefWidth="100"/>
                                    <TableColumn fx:id="productNameColumn" text="Name" prefWidth="150"/>
                                    <TableColumn fx:id="productDescColumn" text="Description" prefWidth="200"/>
                                    <TableColumn fx:id="productPriceColumn" text="Price" prefWidth="80"/>
                                    <TableColumn fx:id="productUnitColumn" text="Unit" prefWidth="60"/>
                                    <TableColumn fx:id="productCategoryColumn" text="Category" prefWidth="100"/>
                                    <TableColumn fx:id="productImageColumn" text="Image" prefWidth="80"/>
                                    <TableColumn fx:id="productVendorColumn" text="Vendor ID" prefWidth="100"/>
                                    <TableColumn fx:id="productActionColumn" text="Actions" prefWidth="150"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </ScrollPane>
                </Tab>

            </TabPane>
        </VBox>
    </center>
</BorderPane>
