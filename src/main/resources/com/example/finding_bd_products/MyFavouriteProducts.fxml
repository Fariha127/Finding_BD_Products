<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo_finding_bd_products.MyFavouriteProductsController">
    <top>
        <VBox spacing="0.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" style="-fx-background-color: linear-gradient(to bottom, #2E7D32, #4CAF50);" BorderPane.alignment="CENTER">
                    <effect>
                        <DropShadow offsetY="2.0">
                            <color>
                                <Color blue="0.20000000298023224" />
                            </color>
                        </DropShadow>
                    </effect>
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="15.0" />
                        <Label text="  Deshi Store" textFill="WHITE">
                            <font>
                                <Font name="Arial Rounded MT Bold" size="48.0" />
                            </font>
                            <padding>
                                <Insets left="12.0" top="20.0" />
                            </padding>
                        </Label>
                        <Region prefHeight="200.0" prefWidth="200.0" />
                        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 7; -fx-padding: 5;">
                            <children>
                                <TextField fx:id="searchField" prefHeight="35.0" promptText="Search for products, categories, or brands..." style="-fx-background-color: transparent; -fx-border-color: transparent;" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                    <padding>
                                        <Insets left="15.0" />
                                    </padding>
                                </TextField>
                                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearch" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #DCDCDC; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;" text="Search">
                                    <HBox.margin>
                                        <Insets right="5.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 15 25 15 25;">
                    <children>
                        <Button fx:id="homeBtn" mnemonicParsing="false" onAction="#showHome" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: white; -fx-text-fill: #708090; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 25; -fx-border-color: #E0E0E0; -fx-border-radius: 25; -fx-cursor: hand; -fx-alignment: CENTER;" text="Home" />
                        <Button fx:id="categoriesBtn" mnemonicParsing="false" onAction="#showCategories" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: white; -fx-text-fill: #708090; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-color: #E0E0E0; -fx-border-radius: 25; -fx-cursor: hand; -fx-font-weight: bold;" text="Product Categories" />
                        <Button fx:id="newlyAddedBtn" mnemonicParsing="false" onAction="#showNewlyAdded" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #708090; -fx-font-size: 14px; -fx-cursor: hand; -fx-border-radius: 25; -fx-border-color: #E0E0E0; -fx-font-weight: bold;" text="Newly Added" />
                        <Button fx:id="favouritesBtn" mnemonicParsing="false" onAction="#showFavourites" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: linear-gradient(to bottom, #2E7D32, #4CAF50); -fx-cursor: hand; -fx-background-radius: 25; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="My Favourites">
                            <font>
                                <Font size="14.0" />
                            </font></Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <padding>
        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
    </padding>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: white; -fx-background: white;" BorderPane.alignment="CENTER">
            <content>
                <VBox spacing="30.0" style="-fx-background-color: #FAFAFA;">
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                    </padding>
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Label text="â™¥" textFill="#d32f2f">
                                            <font>
                                                <Font size="32.0" />
                                            </font>
                                        </Label>
                                        <Label text="My Favourite Products" textFill="#2e7d32">
                                            <font>
                                                <Font name="System Bold" size="28.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <Label text="Your handpicked selection of products you love" textFill="SLATEGRAY">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <GridPane fx:id="productsGrid" hgap="20.0" vgap="20.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>
                    </children>

                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
